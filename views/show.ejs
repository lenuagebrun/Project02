<!DOCTYPE html>
<html lang="en">

<head>
  <style>
    body {
      background: rgb(230, 230, 230);
      color: rgb(153, 153, 153);
      display: grid;
      grid-template-columns: 0.5fr auto auto;
      grid-template-rows: 0.1fr auto auto;
      text-align: left;
      animation: fade 1.3s ease forwards;
    }

    @keyframes fade {
      from {
        opacity: 0;
      }

      to {
        opacity: 1;
      }
    }

    header {
      box-sizing: border-box;
      margin: 0;
      padding-top: 20px;
      background-color: rgb(153, 153, 153);
      grid-column: 1 / 3;
    }

    #cardImage {
      grid-row: 2;
      grid-column: 1;
    }

    article {
      font-size: 30px;
    }

    #card-info {
      grid-row: 2;
      grid-column: 2;
      max-width: 300px;
      border-radius: 3px;
    }

    #card-review {
      grid-column: 1;
      grid-row: 3;
    }

    a {
      grid-column: 1;
      color: rgb(230, 230, 230);
    }

    .reviewSpace {
      grid-column: 2;
      grid-row: 3;
      font-size: 25px;
    }
  </style>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Card</title>
</head>

<body>
  <header>
    <nav>
      <a href='/'>The Hedron Archive</a>
    </nav>
  </header>
  <img id='cardImage' src=<%= userData.image_uris.normal %>>
  <article id='card-info'>
    <h4><%= userData.name %></h4>
    <p><b>Type: </b><%= userData.type_line %></p>
    <p><b>Oracle Text: </b></br><%= userData.oracle_text %></p>
    <p><b>Rarity: </b><%= userData.rarity %></p>
    <p><b>USD Price: </b><%= userData.prices.usd %></p>
  </article>
  <article id='card-review'>
    <h4>Reviews</h4>
    <form id='reviewForm' method='POST' action='/cards/<%= userData.id %>/reviews'>
      <label>Review: </label>
      <textarea name='reviewContent'></textarea></br>
      <label>Rating: </label>
      <select name='rating'>
        <option value='1'>1(Garbage)</option>
        <option value='2'>2</option>
        <option value='3'>3</option>
        <option value='4'>4</option>
        <option value='5'>5(Tireless Tracker)</option>
      </select>
      <button type='submit'>Add Review</button>
    </form>
  </article>
  <% if (cardDatabase) { %>
  <table class='reviewSpace'>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% cardDatabase.reviews.forEach(function(r) { %>
      <tr>
        <td><%= r.createdAt.toLocaleDateString() %></td>
        <td><%= r.content %></td>
        <td><%= r.rating %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% } else { %>
  <h5 class='reviewSpace'>No Reviews Yet</h5>
  <% } %>
</body>

</html>