<!DOCTYPE html>
<html>

<head>
  <title>The Hedron Archive</title>
  <link href="https://fonts.googleapis.com/css2?family=Bungee+Inline&display=swap" rel="stylesheet">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1 id='title'>The Hedron Archive</h1>
  <div class='card search'>
    <form action='/' method='GET'>
      <input id='search-bar' type='text' name='cardSearch'
        placeholder='Search for a card here(name, color, type, rarity)...'>
      <button id='searchButton' type='submit'><b>Search</b></button>
    </form>
  </div>
  <hr>
  <div class='allCards'>
    <% if (userData) { %>
    <% userData.data.forEach(function(t) { %>
    <a href='cards/<%= t.id %>'> <img class='cardImage' src=<%= t.image_uris.normal %>>
    </a>
    <form>
      <button id='addFavs'>Add to Favorites</button>
    </form>
    <% }); %>
    <% } else { %>
    <h3 class="text-center text-info">
      no cards are showing
    </h3>
    <% } %>
  </div>
</body>

</html>